<h1>Listing digital_object_identifiers</h1>

<table>
  <thead>
    <tr>
      <th>String identifier</th>
      <th>Name</th>
      <th>Description</th>
      <th>Current URL</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @digital_object_identifiers.each do |digital_object_identifier| %>
      <tr>
        <td><%= digital_object_identifier.name %></td>
        <td><%= digital_object_identifier.integer_identifier %></td>
        <td><%= digital_object_identifier.description %></td>
          <% if digital_object_identifier.urls.first %>
            <td><%= digital_object_identifier.urls.first.url %></td>
          <% else %>
            <td></td>
          <% end %>
          <td><%= link_to 'Show', digital_object_identifier, :class => "button" %></td> 
          <% if digital_object_identifier.user_id == current_user.id %>
          <td><%= link_to 'Edit', edit_digital_object_identifier_path(digital_object_identifier), :class => "button secondary" %></td> 
          <td><%= link_to 'Destroy', digital_object_identifier, method: :delete, data: { confirm: 'Are you sure?' }, :class => "button alert" %></td>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>


<br>

<%= link_to 'New Digital object identifier', new_digital_object_identifier_path, :class => "button success" %>

